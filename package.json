{
  "name": "blades-assistant",
  "version": "1.0.0",
  "description": "Utility for helping play Millennium Blades",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:js && npm run build:html && npm run build:css",
    "build:html": "cp src/index.html build/index.html",
    "build:js": "browserify --debug src/app.js -o build/js/bundle.js",
    "build:css": "sass src/style.scss:build/css/style.css",
    "build:watch": "npm run build:html-watch && npm run build:js-watch && npm run build:css-watch",
    "build:html-watch": "npm run build:html",
    "build:js-watch": "watchify src/app.js -o build/js/bundle.js",
    "build:css-watch": "sass --watch src/style.scss:build/css/style.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Ian Toltz",
  "license": "ISC",
  "repository": "Asmor/blades-assistant",
  "dependencies": {
    "flux": "^2.1.1",
    "react": "^15.2.0"
  },
  "devDependencies": {
    "microevent-github": "^1.0.0",
    "node-uuid": "^1.4.7",
    "react-dom": "^15.2.0"
  }
}
